#include "colors.inc"
#include "textures.inc"
#include "skies.inc"
#include "math.inc"
#include "transforms.inc"    
#include "woods.inc"
#include "Lit.inc" 

#declare Font="cyrvetic.ttf"

sky_sphere {
S_Cloud2
rotate <90,0.51,1>
}


camera{
    look_at <4, 4, 0>
    location <-4,10, -50>
    sky<0, 1,0 >
    right <-800/600, 0, 0>
}

light_source{
    <10, 20, 0>
    rgb <1,1,1> 
    fade_power 1
    fade_distance 6
}

plane {
  y,-1
  texture {
      pigment { color rgb  <0.4,0.75,0.2>}
      normal { bumps 0.4 scale 0.2 }
      finish { phong 0 }
		}

}


#macro flecheNom (A, S, Coul, alph, rCyl, rCone, Text1, sca, rot, trans)
#declare B=alph*A+alph*S;
cylinder{
    B, A, rCyl
    pigment{
        color Coul
    }
}

cone{
    B, rCone
    S, 0.0
    pigment{
        color Coul
    }
}
text{
    ttf "timrom.ttf"
    Text1
    0
    0
    scale sca
    rotate rot
    translate trans
    pigment{
        color Coul
    }
}
#end

